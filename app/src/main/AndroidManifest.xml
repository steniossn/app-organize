<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.organize_clone">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_dinheiro_128x128"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_dinheiro_256x256"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/Theme.Intro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ReceitasActivity"
            android:theme="@style/ThemeReceitas"></activity>
        <activity android:name=".activity.DespesasActivity"
            android:theme="@style/ThemeDespesa"></activity>
        <activity android:name=".activity.PrincipalActivity"
            android:label="@string/title_activity_principal"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.CadastrarActivity" />
    </application>

</manifest>